{
    "name": "ql/mcp-logger",
    "description": "Library for handling PHP Logging within Quicken Loans.",
    "license": "proprietary",
    "homepage": "http://git/mcp/mcp-logger",
    "authors": [
        {
            "name": "IT Team Web Core",
            "email": "itteamwebcore@quickenloans.com"
        }
    ],

    "archive": {
        "exclude": [
            "/phpunit.xml.dist",
            "/testing"
        ]
    },
    "autoload": {
        "psr-4": {
            "MCP\\Logger\\": "src",
            "MCP\\Logger\\Testing\\": "testing/src"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "ext-xmlwriter": "*",
        "ql/mcp-core": "1.*",
        "ql/uri-template": "1.*"
    },
    "require-dev": {
        "guzzle/http": "*",
        "guzzlehttp/guzzle": "^5.0",
        "mockery/mockery": ">=0.8",
        "phpunit/phpunit": "*",
        "phpunit/php-invoker": "*",
        "aws/aws-sdk-php": "^3.0",
        "psr/log": "*",
        "ql/mcp-http": "^1.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Required when using the Guzzle 4, Guzzle 5, Guzzle 6 services.",
        "psr/log": "Required when using the PSR-3 logger.",
        "aws/aws-sdk-php": "Required when using the Kinesis Service",
        "ql/mcp-http": "Required when using Http Service"
    }
}
