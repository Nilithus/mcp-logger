{
    "name": "ql/mcp-logger",
    "description": "Library for handling PHP Logging within Quicken Loans.",
    "license": "proprietary",
    "homepage": "http://git/mcp/mcp-logger",
    "authors": [
        {
            "name": "IT Team Web Core",
            "email": "itteamwebcore@quickenloans.com"
        }
    ],
    "support": {
        "email": "itteamwebcore@quickenloans.com",
        "issues": "http://git/mcp/mcp-logger/issues",
        "source": "http://git/mcp/mcp-logger"
    },

    "archive": {
        "exclude": [
            "/bin",
            "/fixtures",
            "/phpunit.xml.dist",
            "src/MCP/Testing",
            "/tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "MCP\\Service\\Logger\\": "src/Logger",
            "MCP\\Testing\\": "src/Testing"
        }
    },
    "conflict": {
        "ql/mcp": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer/"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "ext-date": "*",
        "ext-xmlwriter": "*",
        "ql/mcp-core": "1.*"
    },
    "require-dev": {
        "guzzle/http": "*",
        "guzzlehttp/guzzle": "*",
        "mockery/mockery": ">=0.8",
        "phpunit/phpunit": "*",
        "phpunit/php-invoker": "*",
        "psr/log": "*"
    },
    "suggest": {
        "ext-http": "Required for HttpRequest-based service",
        "guzzle/http": "Required for Guzzle-based service",
        "psr/log": "Required to use the included PSR-3 logger"
    }
}
